@model IEnumerable<projetocaixa.Models.Lancamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Incluir">Incluir lançamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodConta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditoDebito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodConta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditoDebito)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodLancamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodLancamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodLancamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
